# すべてのファイルに適用される設定
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# TypeScriptファイルの設定
[*.ts]
max_line_length = 120

# JavaScriptファイルの設定
[*.js]
max_line_length = 120

# HTMLファイルの設定
[*.html]
indent_size = 2

# CSSファイルの設定
[*.css]
indent_size = 2
