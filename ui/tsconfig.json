{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "strict": true,
    "module": "es6",
    "target": "es2022",
    "outDir": "dist",
    "sourceMap": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@i18n/*": ["src/_i18next/*"],
      "@api/*": ["src/api/*"],
      "@atoms/*": ["src/components/atoms/*"],
      "@molecules/*": ["src/components/molecules/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@store/*": ["src/store/*"],
      "@util/*": ["src/util/*"],
      "@validate/*": ["src/validate/*"]
    }
  },
  "include": ["src"]
}
