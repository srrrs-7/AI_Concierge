---
import Atom_Timer from '@components/atoms/Timer.svelte';
import Atom_Pull from '@components/atoms/Pulldown.svelte';
import Calendar from "@components/organisms/Calendar.svelte";
import Header from '@components/organisms/Header.svelte';

// pull down props
let contents: string[] = ['svelte', 'react', 'vue'];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>AI Concierge</title>
  </head>

  <body>
    <a href="/login">Login</a>
    <Header client:load />
    <Atom_Timer client:load />
    <Atom_Pull client:load contents={contents} />

    <Calendar client:load />
  </body>
</html>
